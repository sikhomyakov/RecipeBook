<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/selector_like_color</item>
        <item name="android:minWidth">@dimen/default_icon_size</item>
        <item name="android:minHeight">@dimen/default_icon_size</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppNormalButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppCheckableButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconSize">@dimen/recipe_card_icon_size</item>
        <item name="android:checkable">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorMediumGrey</item>
    </style>
</resources>